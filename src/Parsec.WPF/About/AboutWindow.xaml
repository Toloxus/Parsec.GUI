<Window x:Class="Parsec.WPF.About.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parsec.WPF.About"
        mc:Ignorable="d"
        Title="About" Height="200" Width="200"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock>App version:</TextBlock>
        <TextBlock Text="{Binding CurrentVersion}"></TextBlock>

        <TextBlock>Parsec version:</TextBlock>
        <TextBlock Text="{Binding ParsecVersion}"></TextBlock>

    </StackPanel>
</Window>
